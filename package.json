{
  "name": "zxspeccjs",
  "version": "0.1.0",
  "description": "ZX Spectrum emulator in browser (ES modules + Canvas + WebAudio)",
  "type": "module",
  "scripts": {
    "dev": "http-server -c-1 -p 8080",
    "build": "rollup -c",
    "start": "npm run dev",
    "test": "vitest run",
    "test:unit": "vitest run --dir test",
    "test:e2e": "npx playwright test",
    "test:watch": "vitest --watch --dir test",
    "setup-and-dev": "npm install --legacy-peer-deps && npm run dev"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "http-server": "^14.1.1",
    "rollup": "^3.26.3",
    "vitest": "^1.3.0"
  }
}
